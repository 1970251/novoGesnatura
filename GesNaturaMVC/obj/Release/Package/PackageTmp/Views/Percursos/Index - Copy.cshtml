@model IEnumerable<GesPhloraClassLibrary.Models.Percurso>
    

@{
    ViewBag.Title = "Index";
}

<h2>Percursos Pedestres</h2>
<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Percursos", FormMethod.Get))
    {
        @Html.TextBox("Tipologia")
        <input type="submit" value="submit" />
    }
        
</p>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="customDiv">
                <div >
                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                  
                            <th>
                                @Html.DisplayNameFor(model => model.Tipologia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distancia)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DuracaoAproximada)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Dificuldade)
                            </th>
    
                            <th></th>
                        </tr>


                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(item.Nome, "Details", "Percursos", new { Id = item.ID }, null)
                                </td>
        
                                <td>
                                    @Html.DisplayFor(modelItem => item.Tipologia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Distancia)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DuracaoAproximada)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dificuldade)
                                </td>
     
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
                
                
            </div>
        </div>
        <div class="col-md-6">
            <div class="customDiv">
                <div>
                    @Html.Partial("Maps")

                </div>
            </div>
        </div>
            
        </div>
    </div>


        
        
