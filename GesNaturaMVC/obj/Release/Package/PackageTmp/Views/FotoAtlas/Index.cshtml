@model IEnumerable<GesPhloraClassLibrary.Models.FotoAtlas>



@{
    ViewBag.Title = "Index";
}

<h2>Fotos em aprovação</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Especie.Nome)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Caminho)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Aprovado)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @if (!item.Aprovado)
        {
            <td>
                @Html.DisplayFor(modelItem => item.Especie.Nome)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Caminho)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Aprovado)
            </td>
             <td>
                    <img src="@Url.Content(item.Caminho)" width="100" height="60" />
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>

        }
       
       
        
    </tr>
}

</table>
